generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model faq {
  id    Int     @id @default(autoincrement())
  question String  @unique
  answer String?
  keywords String?
}

enum Status {
  bot
  agent
}

model chat_session {
  id    String  @db.VarChar(50)    @id @default(uuid())
  status Status @default(bot)
}

enum Sender {
  user
  bot
  agent
}

model chat_message {
  id    Int     @id @default(autoincrement())
  session_id String @db.VarChar(50)
  sender Sender
  message String
  created_at DateTime @default(now())
}
